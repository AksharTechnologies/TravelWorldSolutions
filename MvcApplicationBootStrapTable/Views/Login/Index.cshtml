@{
    ViewBag.Title = "Index";
}
<div ng-controller="loginController">
    <div class="row" style=" z-index:2 ">
        <div class="">
            <div class="well col-md-4 col-md-offset-4">
                <h4 style="color: #CA1515; font-weight: bold">{{welcomeMessage}}</h4>

                @using (Html.BeginForm("Index", "Login"))
                {
                    <div class="form-group">
                        <label for="loginid">Login Id</label>
                        <input type="text" class="form-control input-sm" id="loginid" name="loginid" />
                    </div>
                    <div class="form-group">
                        <label for="passwd">Password</label>
                        <input type="password" class="form-control input-sm" id="passwd" name="password" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><b>Login</b></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

